# Chip Fault Analysis AI Agent - Environment Variables

# ============================================
# Application Configuration
# ============================================
APP_NAME=chip-fault-agent
APP_ENV=development
APP_DEBUG=true
APP_VERSION=1.0.0
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# ============================================
# Database Configuration - PostgreSQL
# ============================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=chip_analysis
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ============================================
# Database Configuration - pgvector
# ============================================
PGVECTOR_HOST=${POSTGRES_HOST}
PGVECTOR_PORT=${POSTGRES_PORT}
PGVECTOR_DB=${POSTGRES_DB}
PGVECTOR_USER=${POSTGRES_USER}
PGVECTOR_PASSWORD=${POSTGRES_PASSWORD}

# ============================================
# Neo4j Graph Database Configuration
# ============================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j

# ============================================
# Redis Cache Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=50

# ============================================
# LLM Configuration - OpenAI (Optional)
# ============================================
OPENAI_API_KEY=
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-4-turbo
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=4000

# ============================================
# LLM Configuration - Anthropic Claude (Optional)
# ============================================
ANTHROPIC_API_KEY=
ANTHROPIC_BASE_URL=https://api.anthropic.com
ANTHROPIC_MODEL=claude-3-opus-20240229
ANTHROPIC_MAX_TOKENS=4000

# ============================================
# Vector Embedding Configuration
# ============================================
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DEVICE=cpu
EMBEDDING_DIMENSIONS=384

# ============================================
# Analysis Configuration
# ============================================
DEFAULT_CONFIDENCE_THRESHOLD=0.7
MAX_LOG_SIZE_MB=100
MAX_BATCH_SIZE=100
ANALYSIS_TIMEOUT_SECONDS=30

# ============================================
# JWT Authentication Configuration
# ============================================
JWT_SECRET_KEY=your_jwt_secret_key_change_this
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# ============================================
# File Storage Configuration
# ============================================
UPLOAD_DIR=./data/uploads
REPORTS_DIR=./data/reports
MAX_UPLOAD_SIZE_MB=10

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_DIR=./data/logs
LOG_ROTATION=500 MB
LOG_RETENTION=30 days

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# ============================================
# Monitoring Configuration
# ============================================
ENABLE_METRICS=false
METRICS_PORT=9090
ENABLE_TRACING=false
JAEGER_HOST=localhost
JAEGER_PORT=16686
